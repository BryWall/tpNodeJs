extends layout
block content
    .container
        .content_div_class
            h1 #{title}
            br
            form(role='form' action="/conferences/create" method="post" style='max-width: 300px;')
                .form-group
                    input.form-control(type='text' name="name" placeholder='name')
                .form-group
                    input.form-control(type='date' name="date" placeholder='Date')
                .form-group
                    input.form-control(type='text' name="debut" placeholder='debut')
                .form-group
                    input.form-control(type='text' name="fin" placeholder='fin')
                .form-group
                    input.form-control(type='number' name="port" placeholder='port')
                .btn-group
                    button.blue.btn.btn-default.waves-effect.waves-light(type='submit') create